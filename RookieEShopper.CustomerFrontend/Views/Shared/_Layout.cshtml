    <link href="~/libs/bootstrap-5.0.2-dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" asp-append-version="true">
    <link href="~/libs/fontawesome-free-6.2.1-web/css/all.min.css" rel="stylesheet" type="text/css" asp-append-version="true">
    <link href="~/libs/slick-1.8.1/slick/slick.css" rel="stylesheet" type="text/css" asp-append-version="true">
    <link href="~/css/mg-menu.css" rel="stylesheet" type="text/css" asp-append-version="true">
    <link href="~/css/style.css" rel="stylesheet" type="text/css" asp-append-version="true">
    <link href="~/css/responsive.css" rel="stylesheet" type="text/css" asp-append-version="true">

    <script src="~/js/jquery-3.6.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/libs/bootstrap-5.0.2-dist/js/bootstrap.min.js"></script>
